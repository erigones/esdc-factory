{
  "v": 2,
  "uuid": "{{ imguuid }}",
  "name": "{{ image_name }}",
  "version": "{{ image_version }}",
  "tags": {
	{{ image_tags }}
  },
  "published_at": "{{ lookup('pipe', 'date -u +\"%Y-%m-%dT%H:%M:%SZ\"') }}",
  "os": "{{ ostype | default("linux") }}",
  "type": "zvol",
  "nic_driver": "virtio",
  "disk_driver": "virtio",
  "image_size": {{ image_size | default(zone_disks[0].image_size) }},
  "cpu_type": "qemu64",
  "state": "active",
  "disabled": false,
  "description": "{{ image_desc | default("") }}",
  "homepage": "{{ image_homepage | default("https://danubecloud.org") }}",
  "requirements": {
    {% if image_requirements is defined and image_requirements %}{{ image_requirements }},{% endif %}
    "brand": "{{ image_brand | default('kvm') }}"
  }
}
